@model IEnumerable<Cole.Models.Materia>

@{
    Layout = "~/Views/Administrador/_LayoutAdministrador.cshtml";
    ViewBag.Title = "Materias";
}


<div class="mdl-grid">


    <h2 class="mdl-cell--8-col" style="margin-left:auto; margin-right:auto">Listado de materias</h2>
    <div class="mdl-cell--8-col" style="display:contents">

        <form method="post" action="Index" class="mdl-cell--8-col" style="margin-left:auto; margin-right:auto">


            <div class="mdl-textfield mdl-js-textfield" style="width:150px">
                <input class="mdl-textfield__input text-box single-line" id="valor" name="valor" type="text">
                <label class="mdl-textfield__label">
                </label>
            </div>

            <button class="mdl-button mdl-js-button mdl-button--icon" type="submit" value="Submit">
                <i class="material-icons">search</i>
            </button>

            <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" style="margin-top:12px; float:right" type="button">

                @Html.ActionLink("Crear nuevo", "Create", htmlAttributes: new { @Style = "text-decoration: none; color:white; margin-left:0px" }, routeValues: null)
            </button>
        </form>
        


    </div>
    <br />
    <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp mdl-cell--8-col" style="margin-left:auto; margin-right:auto">
        <thead>
            <tr>
                <th style="text-align:center">
                    Nombre
                </th>

                <th></th>
            </tr>
        </thead>


        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="2" style="color:red;text-align:center">No se han encontrado coincidencias</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        
                        <td>
                            <button class="mdl-button mdl-js-button" type="button" id="editar @item.Id" onclick="location.href='@Url.Action("Edit", "Materias", new { id = item.Id })';return false;">
                                <i class="material-icons mdc-button__icon" aria-hidden="true">edit</i>
                                <div class="mdl-tooltip" for="editar @item.Id">
                                    Editar
                                </div>
                            </button>
                            
                        </td>

                    </tr>
                }
            }
        </tbody>
    </table>

</div>
