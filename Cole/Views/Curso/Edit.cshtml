@model Cole.Models.Curso
@using Cole.Models
@{
    Layout = "~/Views/Administrador/_LayoutAdministrador.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <div class="mdl-grid col-md-12">
        <div class="mdl-layout-spacer">
            <figure class="front">
                <div class="mdl-card-wide mdl-shadow--6dp">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()



                        <div class="mdl-card__title mdl-color--primary mdl-color-text--white relative">
                            <h2 class="mdl-card__title-text">Editar Curso</h2>
                        </div>

                        <div class="mdl-card__supporting-text" style="display:table-cell">

                            <div class="mdl-grid col-md-12">

                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" style="padding-right:10px" id="nro">

                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Nro, new { htmlAttributes = new { @class = "mdl-textfield__input", @type = "number" } })
                                        <label class="mdl-textfield__label" for="nro">
                                            Número
                                        </label>
                                        <span class="mdl-textfield__error">

                                            @Html.ValidationMessageFor(model => model.Nro, "", new { @id = "errorNro" })
                                        </span>
                                    </div>
                                </div>

                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" style="padding-right:10px" id="division">

                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Division, new { htmlAttributes = new { @class = "mdl-textfield__input", @type = "text" } })
                                        <label class="mdl-textfield__label" for="division">
                                            Division
                                        </label>
                                        <span class="mdl-textfield__error">

                                            @Html.ValidationMessageFor(model => model.Division, "", new { @id = "errorDivision" })
                                        </span>
                                    </div>
                                </div>

                            </div>



                            <div class="mdl-grid col-md-12">

                                <div class="col-md-10">
                                    <div class="mdc-select" style="height:47px; width:300px" id="selectNivel">
                                        <i class="mdc-select__dropdown-icon"></i>
                                        <select id="Nivel" class="mdc-select__native-control" name="Nivel">
                                            <option value="primario">Primaria</option>
                                            <option value="secundario">Secundaria</option>
                                        </select>
                                        <label for="Nivel" class="mdc-floating-label">Nivel</label>
                                        <div class="mdc-line-ripple"></div>
                                    </div>
                                </div>

                            </div>

                            <script>

                                const selectNivel = new mdc.select.MDCSelect(document.getElementById("selectNivel"));

                            </script>

                            <br />

                            <text style="color:red;text-align:center" id="errorDuplicado">@ViewBag.KeyCursoDuplicado</text>

                            <div class="mdl-card__actions mdl-card--border">
                                <div class="mdl-grid">
                                    <input type="submit" value="Guardar" class="mdl-cell mdl-cell--12-col mdl-button mdl-button--raised mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-color-text--white" />
                                </div>
                            </div>

                        </div>

                    }

                </div>
            </figure>
        </div>
    </div>
    <script src="~/Content/ValidacionesCrearCurso.js"></script>
</body>
</html>
