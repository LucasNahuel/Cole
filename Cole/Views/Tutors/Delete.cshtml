@model Cole.Models.Tutor

@{
    Layout = "~/Views/Administrador/_LayoutAdministrador.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar</title>
</head>
<body>

    <div class="mdl-grid col-md-12">
        <div class="mdl-layout-spacer">

            <figure class="front">
                <div class="mdl-card-wide mdl-shadow--6dp">
                    <div class="mdl-card__title mdl-color--primary mdl-color-text--white relative">
                        <h2 class="mdl-card__title-text">Eliminar tutor</h2>
                    </div>

                    <div class="mdl-card__supporting-text" style="display:table-cell">

                        <div>
                            <h4>¿Estas seguro que deseas eliminar esto?</h4>
                            <ul>
                                <li>
                                    <text style="font-weight: bold">D.N.I:</text> @Model.Dni
                                </li>
                                <li>
                                    <text style="font-weight: bold">Apellido:</text> @Model.Persona.Apellido
                                </li>
                                <li>
                                    <text style="font-weight: bold">Nombre:</text> @Model.Persona.Nombre
                                </li>
                            </ul>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Eliminar" class="mdl-cell mdl-cell--12-col mdl-button mdl-button--raised mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-color-text--white" />
                                    @Html.ActionLink("Volver al listado", "Index")
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </figure>
        </div>
    </div>
</body>
</html>
