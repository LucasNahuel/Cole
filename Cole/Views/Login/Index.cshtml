@model Cole.Models.Persona
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Login/_LayoutLogin.cshtml";
}

<div class="mdl-grid">
    <div class="mdl-layout-spacer">



        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <figure class="front">
                <div class="mdl-card mdl-shadow--6dp">
                    <div class="mdl-card__title mdl-color--primary mdl-color-text--white relative">
                        <h2 class="mdl-card__title-text">Iniciar sesión</h2>
                    </div>
                    <div class="mdl-card__supporting-text">
                        
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            
                        <div>
                            @Html.EditorFor(model => model.Dni, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                            @if (ViewBag.errorDni == null)
                            {
                                <label class="mdl-textfield__label" for="Dni">
                                    
                                    Dni
                                </label>
                            }
                            else
                            {
                                <span class="mdl-textfield__label" for="Dni">
                                    @ViewBag.errorDni
                                </span>
                            }
                            
                        </div>
                        </div>

                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            
                            <div>
                                @Html.EditorFor(model => model.Contraseña, new { htmlAttributes = new { @class = "mdl-textfield__input", @Type="password" } })
                                @if (ViewBag.errorContraseña == null)
                                {
                                    <label class="mdl-textfield__label" for="Contraseña">

                                        Contraseña
                                    </label>
                                }
                                else
                                {
                                    <span class="mdl-textfield__label" for="Contraseña">
                                        @ViewBag.errorContraseña
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="mdl-card__actions mdl-card--border">
                        <div class="mdl-grid">
                            <input type="submit" value="Ingresar" class="mdl-cell mdl-cell--12-col mdl-button mdl-button--raised mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-color-text--white" />
                        </div>
                    </div>
                </div>
            </figure>
        }
    </div>
</div>
