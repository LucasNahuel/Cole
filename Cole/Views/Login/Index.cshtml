@model Cole.Models.Persona
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Login/_LayoutLogin.cshtml";
}





        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <figure class="front" style="margin:0 auto">
                <div class="mdl-card mdl-shadow--6dp">
                    <div class="mdl-card__title mdl-color--primary mdl-color-text--white relative">
                        <h2 class="mdl-card__title-text">Iniciar sesión</h2>
                    </div>
                    <div class="mdl-card__supporting-text">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="mdl-textfield mdl-js-textfield" style="width:300px" id="textfieldDni">
                            <input class="mdl-textfield__input text-box single-line" id="Dni" name="Dni" type="number">
                            <label class="mdl-textfield__label">
                                D.N.I.
                            </label>
                            <span class="mdl-textfield__error" id="errorDni">@ViewBag.errorDni</span>
                        </div>

                        <div class="mdl-textfield mdl-js-textfield" style="width:300px" id="textfieldContraseña">
                            <input class="mdl-textfield__input text-box single-line" id="Contraseña" name="Contraseña" type="password">
                            <label class="mdl-textfield__label">
                                Contraseña
                            </label>
                            <span class="mdl-textfield__error" id="errorContraseña">@ViewBag.errorContraseña</span>
                        </div>


                        <text style="color:red" id="error">@ViewBag.error</text>

                        <script>
                            if (document.getElementById("errorDni").innerHTML != "") {
                                document.getElementById("textfieldDni").classList.add("is-invalid");
                                document.getElementById("textfieldDni").classList.add("is-dirty");
                            }

                            if (document.getElementById("errorContraseña").innerHTML != "") {
                                document.getElementById("textfieldContraseña").classList.add("is-invalid");
                                document.getElementById("textfieldContraseña").classList.add("is-dirty");
                            }


                            if (document.getElementById("error").innerHTML != "") {
                                document.getElementById("textfieldContraseña").classList.add("is-invalid");
                                document.getElementById("textfieldContraseña").classList.add("is-dirty");
                                document.getElementById("textfieldDni").classList.add("is-invalid");
                                document.getElementById("textfieldDni").classList.add("is-dirty");
                            }
                        </script>
                    </div>
                    <div class="mdl-card__actions mdl-card--border">
                        <div class="mdl-grid">
                            <input type="submit" value="Ingresar" class="mdl-cell mdl-cell--12-col mdl-button mdl-button--raised mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-color-text--white" />
                        </div>
                    </div>
                </div>

            @*<div class="fb-page" data-href="https://www.facebook.com/Escuela-Cat%C3%B3lica-San-Agustin-Cnel-Du-Graty-1558358637566990/" data-tabs="publicaciones" data-width="300" data-height="600" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/Escuela-Cat%C3%B3lica-San-Agustin-Cnel-Du-Graty-1558358637566990/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/Escuela-Cat%C3%B3lica-San-Agustin-Cnel-Du-Graty-1558358637566990/">Escuela Católica &quot;San Agustin&quot; - Cnel Du Graty</a></blockquote></div>*@

            </figure>

            <style>
                form {
                    margin: 1rem auto;
                }

                @@media (max-width: 800px) {
                    .mdl-layout__content {
                        flex-direction: column;
                    }

                    .tab{
                        margin: 1rem auto;
                    }
                }
            </style>
         }
    
